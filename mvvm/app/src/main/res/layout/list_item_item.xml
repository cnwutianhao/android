<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="equip"
            type="com.tyhoo.android.mvvm.data.ItemResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_item_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:contentDescription="@null"
            app:itemImg="@{equip.itemId}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/item_img" />

        <TextView
            android:id="@+id/item_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{equip.itemName}"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/item_item_img"
            app:layout_constraintTop_toTopOf="@id/item_item_img"
            tools:text="铁剑" />

        <TextView
            android:id="@+id/item_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:itemPrice="@{equip.totalPrice}"
            app:layout_constraintStart_toEndOf="@id/item_item_img"
            app:layout_constraintTop_toBottomOf="@id/item_item_name"
            tools:text="费用：250" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>