<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="rune"
            type="com.tyhoo.android.mvvm.data.RuneResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_rune_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:runeImg="@{rune.mingId}"
            tools:src="@drawable/rune_img" />

        <TextView
            android:id="@+id/item_rune_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{rune.mingName}"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/item_rune_img"
            app:layout_constraintTop_toTopOf="@id/item_rune_img"
            tools:text="圣人" />

        <TextView
            android:id="@+id/item_rune_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/item_rune_img"
            app:layout_constraintTop_toBottomOf="@id/item_rune_name"
            app:runeType="@{rune.mingType}"
            tools:text="颜色：红" />

        <TextView
            android:id="@+id/item_rune_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/item_rune_img"
            app:layout_constraintTop_toBottomOf="@id/item_rune_type"
            app:runeGrade="@{rune.mingGrade}"
            tools:text="等级：五级" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>